<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowDetailBook" android:background="@android:color/holo_orange_light">

    <TextView
            android:text="TextView"
            android:layout_width="209dp"
            android:layout_height="40dp"
            android:id="@+id/tv_nameBook"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:fontFamily="serif-monospace" android:textSize="36sp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.365"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/iv_portrait_detail"
            android:textColor="@android:color/background_light"/>


    <CheckBox
            android:id="@+id/bt_star"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:clickable="true"
            android:button="@null"
            android:stateListAnimator="@animator/scale"
            android:checked="false"
            android:background="@drawable/like_icon"
            android:focusable="true"
            android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_nameBook"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="276dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/booksex"
            android:layout_width="194dp"
            android:layout_height="218dp"
            android:id="@+id/iv_portrait_detail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Example example exampleExample example exampleExample example exampleExample example exampleExample example exampleExample example example"
            android:layout_width="325dp"
            android:layout_height="244dp"
            android:id="@+id/tv_description" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tv_nameBook"
            android:textAlignment="viewStart" android:textSize="16sp" android:lineSpacingExtra="8sp"
            android:fontFamily="casual" android:textColor="@android:color/white"/>


</android.support.constraint.ConstraintLayout>